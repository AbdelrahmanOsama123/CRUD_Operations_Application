@model IEnumerable<Catagory>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller ="Catagory" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Catagory
            </a>
        </div>
    </div>
   <br><br> 
</div>
<h1>Index Catagory</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead style="font-size:30px;">
        <th>Catagory Name</th>
        <th>time</th>
        <th>display order</th>
        <th>Edit</th>

    </thead>
    <tbody style="font-size:20px">
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Time
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Catagory" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 "><i class="bi bi-pencil-square"></i><br>Edit</a>
                        &nbsp;
                        <a asp-controller="Catagory" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i><br>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table> 